<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CheerUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/screen_bg</item>
        <item name="colorPrimaryVariant">@color/screen_bg</item>
        <item name="colorOnPrimary">@color/screen_bg</item>
        <item name="colorSecondary">@color/button_bg</item>
        <item name="colorSecondaryVariant">@color/button_bg</item>
        <item name="colorOnSecondary">@color/button_bg</item>
        <item name="android:statusBarColor">@color/screen_bg</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="my_text_layout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">11dp</item>
        <item name="borderRound">11dp</item>
        <item name="borderWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">11dp</item>
        <item name="boxCornerRadiusTopEnd">11dp</item>
        <item name="boxCornerRadiusBottomStart">11dp</item>
        <item name="boxCornerRadiusTopStart">11dp</item>
    </style>


    <style name="Theme.CheerUp" parent="Base.Theme.CheerUp" />
</resources>